  $('.show').off().on('ajax:success', function() {
    clickToExpandCards($(this).closest('.card'));
  });

  function clickToExpandCards($obj){
    if ($obj.hasClass('card-expand')) { 
      $obj.find('.card-hidden-text').hide();
      $obj.removeClass('card-expand'); 
    } else {
      $obj.find('.card-hidden-text').show();
      $obj.addClass('card-expand');
    }
  };



