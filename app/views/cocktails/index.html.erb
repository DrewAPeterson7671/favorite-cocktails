
<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Ingredients</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td>
          <% if !cocktail.api_image_url.nil? %>
            <%= image_tag cocktail.api_image_url, :class => 'drink-thumb' %>
          <% end %>
          <% if cocktail.cocktail_photo.attached? %>
            <%= image_tag cocktail.cocktail_photo, :class => 'drink-thumb' %>
          <% end %>
        </td>
        <td><%= cocktail.name %></td>
        <td><%= cocktail.ingredient1 %></td>
        <td><%= cocktail.user_id %></td>
        <td><%= link_to 'Show', cocktail %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
<%= link_to 'Search for a Cocktail', search_page_path %>
<%= button_to 'Log out', destroy_user_session_path, :method => :delete %>
