
<h2>My Favorites</h2>

<div class="card-grid">
  <% if @cocktails.any? %>
    <% @cocktails.each do |cocktail| %>
      <div class='card'>
        <% if cocktail.cocktail_photo.attached? %>
          <%= image_tag cocktail.cocktail_photo, :class => 'drink-thumb' %>
        <% end %>
          <div class='card-name'>
            <h3><%= link_to cocktail.name, cocktail, remote: true, class: 'show' %></h3>
          </div>
          <div class='card-ingredients'>
            <p><span class='card-hidden-text ingredients-item'><%= cocktail.measure1 %></span>
            <span class='ingredients-item'><%= cocktail.ingredient1 %></span></p>
            <% if cocktail.ingredient2? %>
              <p><span class='card-hidden-text ingredients-item'><%= cocktail.measure2 %></span>
              <span class='ingredients-item'><%= cocktail.ingredient2 %></span></p>
            <% end %>
            <% if cocktail.ingredient3? %>
              <p><span class='card-hidden-text ingredients-item'><%= cocktail.measure3 %></span>
              <span class='ingredients-item'><%= cocktail.ingredient3 %></span></p>
            <% end %>
            <% if cocktail.ingredient4? %>
              <p><span class='card-hidden-text ingredients-item'><%= cocktail.measure4 %></span>
              <span class='ingredients-item'><%= cocktail.ingredient4 %></span></p>
            <% end %>

            <div class='card-hidden-text'>
              <p>
                <strong>Instructions:</strong>
                <%= cocktail.instructions %>
              </p>
              <p>
                <strong>Glass:</strong>
                <%= cocktail.glass%>
              </p>
            </div>

          </div>
            
          <div class='card-buttons'>
            <%= link_to 'Details', cocktail, :class => 'show', remote: true %>
            <%= link_to 'Edit', edit_cocktail_path(cocktail), :class => 'card-link' %>
            <%= link_to 'Remove', cocktail, :class => 'card-link', method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: 'delete' %>
          </div>
      </div>
    <% end %>
  <% else %>
    <p>No favorites chosen yet.</p>
  <% end %>
</div>

<div class='pagination'>
  <%= will_paginate @cocktails %>
</div>

